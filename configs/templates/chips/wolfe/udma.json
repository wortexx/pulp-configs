{
  "includes": [ "ips/udma/udma_v2.json"],

  "nb_periphs": 8,

  "interfaces" : ["spim", "hyper", "i2c", "i2s", "uart", "cpi"],

  "properties": {
    "l2_read_fifo_size": 8
  },

  "spim": {
    "version"      : 2,
    "nb_channels"  : 2,
    "ids"          : [0, 1],
    "offsets"      : ["0x000", "0x080"],
    "is_master"    : true
  },

  "hyper": {
    "version"      : 1,
    "nb_channels"  : 1,
    "ids"          : [2],
    "offsets"      : ["0x100"],
    "is_master"    : true
  },

  "uart": {
    "version"      : 1,
    "nb_channels"  : 1,
    "ids"          : [3],
    "offsets"      : ["0x180"],
    "is_master"    : true
  },

  "i2c": {
    "version"      : 2,
    "nb_channels"  : 2,
    "ids"          : [4, 5],
    "offsets"      : ["0x200", "0x280"]
  },

  "i2s": {
    "version"      : 1,
    "nb_channels"  : 1,
    "ids"          : [6],
    "offsets"      : ["0x300"]
  },

  "cpi": {
    "version"      : 1,
    "nb_channels"  : 1,
    "ids"          : [7],
    "offsets"      : ["0x380"],
    "is_slave"     : true
  },

  "regmap": {
    "SPIM0": {
      "type": "group",
      "template": "SPIM",
      "offset": "0x100"
    }
  }

}
